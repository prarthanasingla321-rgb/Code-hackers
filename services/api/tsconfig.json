

{

  "compilerOptions": {

    "target": "ES2020",

    "module": "commonjs",

    "lib": ["es2020"],

    "experimentalDecorators": true,

    "emitDecoratorMetadata": true,

    "strict": true,

    "esModuleInterop": true,

    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,

    "moduleResolution": "node",

    "outDir": "./dist"

  },

  "include": ["src"],

  "exclude": ["node_modules", "dist"]

}

